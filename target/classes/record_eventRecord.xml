<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="pojo.EventRecord" table="event_record" schema="natatorium">
        <id name="id" column="id"/>
        <property name="reason" column="reason"/>
        <property name="type" column="type"/>
    </class>
    <class name="pojo.Record" table="record" schema="natatorium">
        <id name="id" column="id"/>
        <property name="date" column="date"/>
        <property name="type" column="type"/>
        <one-to-one name="eventRecord" class="pojo.EventRecord"/>
    </class>
</hibernate-mapping>