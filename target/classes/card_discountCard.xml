<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.Card" table="card" schema="natatorium">
        <id name="id" column="id"/>
        <property name="availability" column="availability"/>
        <one-to-one name="discountCard" class="pojo.DiscountCard"/>
    </class>
    <class name="pojo.DiscountCard" table="discount_card" schema="natatorium">
        <id name="id" column="id"/>
        <property name="discountRate" column="discount_rate"/>
        <property name="dueDate" column="due_date"/>
    </class>
</hibernate-mapping>